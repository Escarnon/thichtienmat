<h2 class="mb-3">Danh sách nhân viên</h2>

<p>
    <a class="btn btn-primary btn-custom" asp-action="Create">+ Thêm nhân viên</a>
</p>

<table class="table table-striped table-custom">
    <thead>
        <tr>
            <th>Họ tên</th>
            <th>Giới tính</th>
            <th>Điện thoại</th>
            <th>Email</th>
            <th>Lương</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Gender</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.Salary.ToString("C0")</td>
                <td>@item.Status</td>
                <td>
                    <a class="btn btn-sm btn-warning btn-custom" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                    <a class="btn btn-sm btn-info btn-custom" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a>
                    <a class="btn btn-sm btn-danger btn-custom" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
