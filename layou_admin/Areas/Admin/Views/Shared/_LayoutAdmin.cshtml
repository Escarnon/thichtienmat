<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- ArchitectUI CSS -->
    <link href="~/assets/base.css" rel="stylesheet" />
    @* <link href="~/assets/base.css" rel="stylesheet" /> *@
</head>
<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
       
        <!-- Header -->
        @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_AdminHeader.cshtml")


        @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_AdminNavbar.cshtml")
        <!-- Sidebar -->
        @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_AdminSidebar.cshtml")

        <!-- Main Content -->
        <div class="app-main__outer">
            <div class="app-main__inner">
                @RenderBody()
            </div>
        </div>

        <!-- Footer -->
        @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_AdminFooter.cshtml")
    </div>

    <!-- ArchitectUI JS -->
    <script src="~/assets/main.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
