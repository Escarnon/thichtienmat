<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Cook</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <header class="bg-dark text-white p-3 mb-3">
            <h2>Cook</h2>
        </header>

        <main class="row">
            <div class="col-md-3">
                <!-- Load từ Partial View -->
                @Html.Partial("_CategoryMenu")
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </main>

        <footer class="bg-dark text-white p-3 mt-3">
            <div class="row">
                <div class="col-md-6">GIỚI THIỆU</div>
                <div class="col-md-6">LIÊN HỆ</div>
            </div>
        </footer>
    </div>
</body>
</html>
